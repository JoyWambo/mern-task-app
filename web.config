<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <handlers>
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <match url="/*" />
          <action type="Rewrite" url="backend/server.js"/>
        </rule>
      </rules>
    </rewrite>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="4294967295" />
      </requestFiltering>
    </security>
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" prefixLanguageFilePath="" path="/backend/server.js" responseMode="ExecuteURL" />
    </httpErrors>
    <iisnode
      watchedFiles="web.config;*.js"
      node_env="production"
      nodeProcessCommandLine=""%programfiles%\nodejs\%nodeversion%\node.exe""
      interceptor=""%programfiles%\iisnode\interceptor.js"" />
  </system.webServer>
</configuration>